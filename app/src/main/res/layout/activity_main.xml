<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/browse_web"
        android:id="@+id/btnBrowseWeb"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="browseWeb" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_map"
        android:id="@+id/btnShowMap"
        android:layout_below="@+id/btnBrowseWeb"
        android:layout_alignLeft="@+id/btnMakeCall"
        android:layout_alignStart="@+id/btnMakeCall"
        android:layout_marginTop="44dp"
        android:onClick="showMap" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/make_a_call"
        android:id="@+id/btnMakeCall"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/btnShowMap"
        android:layout_alignLeft="@+id/btnBrowseWeb"
        android:layout_alignStart="@+id/btnBrowseWeb"
        android:onClick="makeCall" />
</RelativeLayout>
